#!/usr/bin/env node

var fs = require('node:fs');
var path = require('node:path');
var { chdir, cwd } = require('node:process');
var { Io } = require('@vigihdev/bootstrap4-bundle/src/vendor/util/io');
var { spawn, spawnSync } = require('node:child_process');

const oldPath = cwd();
const bootstrap4BundlePath = path.resolve(cwd(), 'node_modules', '@vigihdev', 'bootstrap4-bundle');

chdir(bootstrap4BundlePath);

options = {};
process.argv.splice(2).forEach(function (entry) {
    if (entry.slice(0, 5) === 'grunt') {
        spawnSync(entry.slice(0, 5), [entry.slice(6)], { stdio: 'inherit' });
        return;
    }
    Io.error(`Unknown command: ${entry}`);
});

